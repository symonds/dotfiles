# Dunst Config
[global]
    alignment = left
    markup = yes
    bounce_freq = 0
    browser = /usr/bin/firefox -new-tab
    dmenu = /usr/bin/dmenu -p dunst:
    follow = none
    #font = Terminus (TTF) 12
    #font = Monospace 8
    font = Fira Code Retina 8
    format = "<b>%s</b>\n%b"
    frame_width = 3
    frame_color = "#aaaaaa"
    # geometry [{width}]x{height}][+/-{x}+/-{y}]
    geometry = "750-12+30"
    history_length = 20
    horizontal_padding = 8
    idle_threshold = 120
    ignore_newline = no
    indicate_hidden = yes
    line_height = 0
    monitor = 0
    padding = 8
    separator_color = frame
    separator_height = 1
    show_age_threshold = 60
    show_indicators = yes
    shrink = yes
    sort = yes
    startup_notification = false
    sticky_history = yes
    transparency = 30
    word_wrap = yesshare/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

[shortcuts]
    # Close notification.
    close = ctrl+space

    # Close all notifications.
    close_all = ctrl+shift+space

    # Redisplay last message(s).
    history = ctrl+grave

    # Context menu.
    context = ctrl+shift+period

[urgency_low]
    background = "#222222"
    foreground = "#888888"
    timeout = 10

[urgency_normal]
    background = "#285577"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#900000"
    foreground = "#ffffff"
